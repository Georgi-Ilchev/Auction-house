<section>
    <h1 class="display-4 text-warning">Weekly auctions</h1>
    <div class="col-md-12 text-center">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.WeeklyAuctions.Count; i++)
                {
                    var weeklyAuction = Model.WeeklyAuctions[i];
                    <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                        <img class="img-thumbnail" src="@weeklyAuction.ImageUrl" style="width: 400px; height: 400px;" alt="">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a class="btn btn-primary" asp-controller="Auction" asp-action="SingleAuction" asp-route-id="@weeklyAuction.Id"></a></h5>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>