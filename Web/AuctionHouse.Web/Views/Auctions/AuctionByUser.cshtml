                <label>Search</label>
                <input type="text" class="form-control" id="txtSearch" />
            </div>
        </div>
    </div>*@

<br />
<div class="row">
    @foreach (var auction in this.Model.Auctions)
    {
        <div class="card media col-md-3 mb-4" style="width: 18rem;">
            <img class="card-img-top" src="@auction.ImageUrl" alt="This auction doesn`t have image" width="100">
            <div class="card-body">
                <h3 class="card-title">@auction.Name</h3>
                <p class="card-text">Category: @auction.CategoryName</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="font-weight-bold">Starting price: </span>$@auction.Price</li>
                <li class="list-group-item"><span class="font-weight-bold">Current price: </span>$@(auction.BidsAmount + auction.Price)</li>
                <li class="list-group-item"><span class="font-weight-bold">Owner: </span>@auction.UserUserName</li>
            </ul>
            <div class="card-body">
                <a asp-action="SingleAuction" asp-route-auctionId="@auction.Id" class="btn btn-success">View</a>
            </div>
        </div>
    }
</div>

<hr />

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="AuctionByUser" asp-route-id="@Model.PreviousPageNumber">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="AuctionByUser" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="#">@Model.PageNumber <span class="sr-only">(current)</span></a>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="AuctionByUser" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="AuctionByUser" asp-route-id="@Model.NextPageNumber">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>