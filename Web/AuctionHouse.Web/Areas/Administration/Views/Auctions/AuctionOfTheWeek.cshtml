@model AuctionHouse.Web.ViewModels.Administration.Auctions.PromoteAuctionInputModel

@{
    this.ViewData["Title"] = "Week auction";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-md-3 text-center" enctype="multipart/form-data">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <span asp-validation-for="PromoteEnd" class="text-danger"></span>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label asp-for="PromoteEnd" class="input-group-text">
                    <i class="fas fa-file-signature"></i>
                </label>
            </div>
            <input asp-for="PromoteEnd" placeholder="Promote Until" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Set to week auction</button>
    <hr />
</form>